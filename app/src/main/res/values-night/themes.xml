<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheKoLab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TheKoLab.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />


    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.TheKoLab">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Tab Theme -->
    <style name="TabTheme" parent="TabStyleTheme.Base" />

    <style name="TabStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/tabColorPrimary</item>
        <item name="colorPrimaryDark">@color/tabColorPrimaryDark</item>
        <item name="colorAccent">@color/tabColorAccent</item>
    </style>

    <!-- SwipeDown Theme -->
    <style name="SwipeDownTheme" parent="SwipeDownStyleTheme.Base" />

    <style name="SwipeDownStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/swipeDownColorPrimary</item>
        <item name="colorPrimaryDark">@color/swipeDownColorPrimaryDark</item>
        <item name="colorAccent">@color/swipeDownColorAccent</item>
    </style>

    <!--Location Theme-->
    <style name="LocationTheme" parent="LocationStyleTheme.Base" />

    <style name="LocationStyleTheme.Base" parent="Theme.TheKoLab">

        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>

        <item name="colorPrimary">@color/swipeDownColorPrimary</item>
        <item name="colorPrimaryDark">@color/swipeDownColorPrimaryDark</item>
        <item name="colorAccent">@color/swipeDownColorAccent</item>
    </style>


    <!-- Palette Theme -->
    <style name="PaletteTheme" parent="PaletteStyleTheme.Base" />

    <style name="PaletteStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/tabColorPrimary</item>
        <item name="colorPrimaryDark">@color/tabColorPrimaryDark</item>
        <item name="colorAccent">@color/tabColorAccent</item>
        <item name="textAppearanceBody1">@color/black</item>

    </style>


    <!-- Filter ListView Theme -->
    <style name="FilterListViewTheme" parent="FilterListViewStyleTheme.Base" />

    <style name="FilterListViewStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/filterListViewColorPrimary</item>
        <item name="colorPrimaryDark">@color/filterListViewColorPrimaryDark</item>
        <item name="colorAccent">@color/filterListViewColorAccent</item>
    </style>

    <!-- Multi-Pane Theme -->
    <style name="MultiPaneTheme" parent="MultiPaneStyleTheme.Base" />

    <style name="MultiPaneStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/multiPaneColorPrimary</item>
        <item name="colorPrimaryDark">@color/multiPaneColorPrimaryDark</item>
        <item name="colorAccent">@color/multiPaneColorAccent</item>
    </style>

    <!-- Built-in WebView Theme -->
    <style name="BuiltInWebViewTheme" parent="BuiltInWebViewStyleTheme.Base" />

    <style name="BuiltInWebViewStyleTheme.Base" parent="Theme.TheKoLab">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/builtInWebViewColorPrimary</item>
        <item name="colorPrimaryDark">@color/builtInWebViewColorPrimaryDark</item>
        <item name="colorAccent">@color/builtInWebViewColorAccent</item>
    </style>

    <!-- Youtube Theme -->
    <style name="YoutubeTheme" parent="YoutubeStyleTheme.Base" />

    <style name="YoutubeStyleTheme.Base" parent="Theme.TheKoLab">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/swipeDownColorPrimary</item>
        <item name="colorPrimaryDark">@color/swipeDownColorPrimaryDark</item>
        <item name="colorAccent">@color/swipeDownColorAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>
</resources>