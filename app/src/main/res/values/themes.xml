<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TheKoLab" parent="Theme.MaterialComponents">
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_300</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
    </style>

    <style name="TheKoLab.AppItem.Title" parent="TheKoLab.TextAppearance.Title" />

    <style name="TheKoLab.AppItem.Subhead" parent="TheKoLab.TextAppearance.Subhead" />

    <style name="TheKoLab.NoActionBar" parent="TheKoLab">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TheKoLab.TextAppearance.Body" parent="TextAppearance.AppCompat.Body2" />

    <style name="TheKoLab.TextAppearance.Display" parent="TextAppearance.AppCompat.Display3" />

    <style name="TheKoLab.TextAppearance.Subhead" parent="@android:style/TextAppearance.Material.Subhead" />

    <style name="TheKoLab.TextAppearance.Title" parent="@android:style/TextAppearance.Material.Title" />

    <style name="TheKoLab.Toolbar.Date" parent="TheKoLab.TextAppearance.Body" />

    <style name="TheKoLab.Toolbar.Time" parent="TheKoLab.TextAppearance.Display" />

</resources>