<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="@dimen/extra_small"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/grey_800"
    app:cardCornerRadius="@dimen/small"
    app:cardElevation="@dimen/small"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:rippleColor="@color/grey_700">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small"
        tools:background="@color/grey_800">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <TextView
            android:id="@+id/app_item_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.75"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:paddingHorizontal="8dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/left_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="App title"
            tools:textColor="@color/white" />

        <TextView
            android:id="@+id/app_item_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|start"
            android:paddingHorizontal="16dp"
            android:textAppearance="@style/TheKoLab.TextAppearance.Subhead"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NewApi"
            tools:text="A little description of the application"
            tools:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:fitsSystemWindows="true"
            android:src="@drawable/keyboard_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/right_guideline"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>