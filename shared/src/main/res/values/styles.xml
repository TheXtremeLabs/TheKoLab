<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TheKoLab.Guideline" parent="">
        <item name="android:layout_height">@dimen/empty_dp</item>
        <item name="android:layout_width">@dimen/empty_dp</item>
    </style>

    <style name="TheKoLab.Image" parent="">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="TheKoLab.Image.Arrow" parent="TheKoLab.Image">
        <item name="srcCompat">@drawable/keyboard_arrow</item>
    </style>

    <style name="TheKoLab.Image.Circle" parent="TheKoLab.Image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TheKoLab.Layout" parent="">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TheKoLab.Layout.Smooth" parent="TheKoLab.Layout">
        <item name="android:alpha">@dimen/alpha_smooth</item>
    </style>

    <style name="TheKoLab.Text.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">?android:letterSpacing</item>
    </style>

    <style name="TheKoLab.Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/medium</item>
    </style>

    <style name="TheKoLab.Text.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">?android:letterSpacing</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TheKoLab.Text.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:letterSpacing">@dimen/letter_spacing_smooth</item>
    </style>

</resources>