<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TheKoLab.Theme" parent="Theme.MaterialComponents">
        <item name="android:colorEdgeEffect">@color/grey_700</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:navigationBarColor">@color/dark_grey</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/dark_grey</item>
        <item name="colorPrimary">@color/orange_300</item>
        <item name="colorPrimaryVariant">@color/orange_300</item>
        <item name="colorSecondary">@color/purple_300</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorSurface">@color/dark_grey</item>
    </style>

    <style name="TheKoLab.Theme.NoActionBar" parent="TheKoLab.Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>